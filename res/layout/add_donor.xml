<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background2">
    
    <TableLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp">
    
        <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="27dp"
                android:text="Donor Registration"/>
        <TableRow>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:text="Govt. ID"/>
            
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/govt_id"/>
        </TableRow>
        
         <TableRow>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:text="Donor Name"/>
            
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/donor_name"/>
        </TableRow>
        
         <TableRow>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:text="Blood Group"/>
            
            <Spinner android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/donor_blood_grp"/>
        </TableRow>
        
        <TableRow>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"
				android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:text="Contact no"/>
            
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/contact"/>
        </TableRow>
        
        <TableRow>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:text="Address"/>
            
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/address"/>
        </TableRow>
        
         <TableRow>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="Location"/>
            
            <Spinner android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/donor_location"/>
        </TableRow>
        
    </TableLayout>
    
        <Button android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:id="@+id/add_donor"
                android:layout_gravity="center"
                android:text="Add Donor"
              />
    

</LinearLayout>
